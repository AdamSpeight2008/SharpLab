{
    "compilerOptions": {
        "target": "ES2019",
        "module": "ESNext",
        "moduleResolution": "node",
        "allowJs": true,
        "checkJs": true,
        "noEmit": true,
        "strict": true,
        "importsNotUsedAsValues": "error",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true
    },
    "include": [
        "**/*.ts",
        "**/*.js",
        "**/*.cjs",
    ],
    "exclude": [
        "node_modules/**/*",
        "wwwroot/**/*"
    ]
}